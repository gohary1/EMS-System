@model Department
@{
    ViewData["Title"] = "delete";
}

<h2>are you sure you want to delete</h2>
<h3 class="text-center">Details of department</h3>
<form class="form-group" asp-action="delete" asp-route-id="@Model.Id">
    <div class="form-floating mb-3">
        <label asp-for="Code">Code</label>
        <input type="number" class="form-control" asp-for="Code" readonly>
    </div>
    <div class="form-floating mb-3">
        <label asp-for="Name">Name</label>
        <input type="name" class="form-control" asp-for="Name" readonly>
    </div>
    <div class="form-floating mb-3">
        <label asp-for="DateOfCreation">Date Of Creation</label>
        <input type="date" class="form-control" asp-for="DateOfCreation" readonly>
    </div>

    @* <input value="edit" class="btn btn-outline-success" asp-action="edit"/> *@
    <input type="submit" class="btn btn-danger" value="delete"/>
    <a asp-controller="Department" asp-action="Index" class="btn btn-light"> Back To List</a>
</form>

