@model Department
@{
    ViewData["Title"] = "create";
}

<h3 class="text-center">Create a new Department</h3>
<form class="form-group" asp-action="create">
    <div class="form-floating mb-3">
        <label asp-for="Code">Code</label>
        <input type="number" class="form-control" asp-for="Code" placeholder="Code">      
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <label asp-for="Name">Name</label>
        <input type="name" class="form-control" asp-for="Name" placeholder="Name">      
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <label asp-for="DateOfCreation">Date Of Creation</label>
        <input type="date" class="form-control" asp-for="DateOfCreation" placeholder="DateOfCreation">        
    </div>

    

    <input type="submit" value="create" class="btn btn-outline-success" asp-action="create"/>
    <a asp-controller="Department" asp-action="Index" class="btn btn-light"> Back To List</a>
</form>
