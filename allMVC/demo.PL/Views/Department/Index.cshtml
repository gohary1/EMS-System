
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center">All department</h2>
        <button class="btn btn-info px-1 mb-3"><a asp-controller="Department" asp-action="create" class="text-decoration-none text-body">Create a new Department</a></button>
        @if(Model.Count() > 0)
        {
            <table class="table table-success table-hover">
                <thead>
                    <tr class="font-weight-bold h6">
                        <td>@Html.DisplayNameFor(d => d.Code)</td>
                        <td>@Html.DisplayNameFor(d => d.Name)</td>
                        <td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>
                        <td>Details</td>
                        <td>Update</td>
                        <td>Delete</td>
                    </tr>
                    
                </thead>
                <tbody>
                    @foreach (var dep in Model)
                    {
                        <tr class="h5 font-weight-normal">
                        <td>@dep.Code</td>
                        <td>@dep.Name</td>
                        <td>@dep.DateOfCreation</td>
                         <partial name="_buttonsPartial" model="dep.Id" />
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <div class="container d-flex justify-content-center bg-danger">
                <h4 class="p-3">there are no departments</h4>
            </div>
        }
        
            
