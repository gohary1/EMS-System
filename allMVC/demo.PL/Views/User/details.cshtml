@model UsersViewModel
@{
    ViewData["Title"] = "details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Details for @Model.FName @Model.LName</h3>
<form class="form-group" asp-action="edit">
    <div class="mb-3">
        <label asp-for="FName">First Name</label>
        <input type="text" class="form-control" asp-for="FName" placeholder="Name" readonly>

    </div>
    <div class="mb-3">
        <label asp-for="LName">Last Name</label>
        <input type="text" class="form-control" asp-for="LName" placeholder="LName" readonly>

    </div>
    <div class=" mb-3">
        <label asp-for="Email">Email</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="Email" readonly>

    </div>

    <div class=" mb-3">
        <label asp-for="phoneNumber">PhoneNumber</label>
        <input type="number" class="form-control" asp-for="phoneNumber" placeholder="phoneNumber" readonly>

    </div>

    <a asp-route-id="@Model.Id" class="btn btn-info" asp-action="update">want to edit?</a>
    <a asp-controller="User" asp-action="Index" class="btn btn-light"> Back To List</a>
</form>

