@model UsersViewModel
@{
    ViewData["Title"] = "update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Update for @Model.FName @Model.LName</h3>
<form class="form-group" asp-action="update" method="post">
    <div class="mb-3">
        <label asp-for="FName">First Name</label>
        <input type="text" class="form-control" asp-for="FName" placeholder="Name" >

    </div>
    <div class="mb-3">
        <label asp-for="LName">Last Name</label>
        <input type="text" class="form-control" asp-for="LName" placeholder="LName" >

    </div>
    <div class=" mb-3">
        <label asp-for="Email">Email</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="Email" >

    </div>

    <div class=" mb-3">
        <label asp-for="phoneNumber">PhoneNumber</label>
        <input type="number" class="form-control" asp-for="phoneNumber" placeholder="phoneNumber" >

    </div>

    <button type="submit" class="btn btn-outline-success" asp-action="update">Update Now</button>
    <a asp-controller="User" asp-action="Index" class="btn btn-light"> Back To List</a>
</form>

