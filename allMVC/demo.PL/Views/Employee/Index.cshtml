

@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center">All Employees</h2>
        <button class="btn btn-info px-1 mb-3"><a asp-controller ="Employee" asp-action="create" class="text-decoration-none text-body">Create a new employee</a></button>
        <form class="d-flex justify-content-center align-items-center my-3" asp-action="Index">

            <input class="form-control" type="search" placeholder="search by name" name="nameEmp" />
            <input type="submit" value="search" class="btn btn-success px-4"/>
               
            </form>
        @if(!string.IsNullOrEmpty(TempData["Message"]as string))
        {
           <div class="alert-danger">
                <p class="text-center m-0 h3">@TempData["Message"]</p>
            </div>
        }
        @if(Model.Count() > 0)
        {
            <table class="table table-dark table-hover">
                <thead>
                <tr class="font-weight-bold h6">
                <td>@Html.DisplayNameFor(d => d.Image) </td>
                    <td>@Html.DisplayNameFor(d => d.Name)</td>
                    <td>@Html.DisplayNameFor(d => d.Age)</td>
                    <td>@Html.DisplayNameFor(d => d.Salary)</td>
                    <td>@Html.DisplayNameFor(d => d.Department)</td>
                    <td>@Html.DisplayNameFor(d => d.IsActive)</td>
                    <td>@Html.DisplayNameFor(d => d.Email)</td>
                    <td>@Html.DisplayNameFor(d => d.PhoneNumber)</td>
                    <td>@Html.DisplayNameFor(d => d.HiringDare)</td>
                    <td>Details</td>
                    <td>Update</td>
                    <td>Delete</td>
                </tr>
                    
                </thead>
                <tbody>
                    @foreach (var dep in Model)
                    {
                        <tr class="h6 font-weight-light">
                            
                            <td>
                                <img src="~/Files/Images/@dep.ImageName" class="img-circle" height="40" width="40" alt="No Employee Image" />
                            </td>
                           
                            <td>@dep.Name</td>
                            <td>@dep.Age</td>
                            <td>@dep.Salary</td>
                            <td>@dep.Department?.Name</td>
                            <td>@dep.IsActive</td>
                            <td>@Html.DisplayFor(a => dep.Email)</td>
                            <td>@dep.PhoneNumber</td>
                            <td>@Html.DisplayFor(a => dep.HiringDare)</td>
                            <partial name="_buttonsPartial" model="dep.Id"/>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <div class="container d-flex justify-content-center bg-danger">
                <h4 class="p-3">there are no Employees</h4>
            </div>
        }
        
            
