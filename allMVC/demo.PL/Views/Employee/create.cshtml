@model EmployeeViewModel
@{
    ViewData["Title"] = "create";
}
@inject IUnitOfWork _department
@{
    var department = new SelectList(_department.DepRepo.GetAll(), nameof(Department.Id), nameof(Department.Name));
}

<h3 class="text-center">Create a new Employee</h3>
<form class="form-group" asp-action="create" enctype="multipart/form-data">
    <div class=" mb-3">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Name">      
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class=" mb-3">
        <label asp-for="Age">Age</label>
        <input type="number" class="form-control" asp-for="Age" placeholder="Age">
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" id="isActiveYes" asp-for="IsActive" value="true">
        <label class="form-check-label" for="isActiveYes">
            YES
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" id="isActiveNo" asp-for="IsActive" value="false">
        <label class="form-check-label" for="isActiveNo">
            NO
        </label>
    </div>
            
    <div class=" mb-3">
        <label asp-for="Email">Email</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class=" mb-3">
        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div> 
    <div class="mb-3">
        <label asp-for="HiringDare">HiringDare</label>
        <input type="date" class="form-control" asp-for="HiringDare">
        <span asp-validation-for="HiringDare" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-start align-items-center mb-3">
        <label class="font-weight-bold h5" asp-for="Department">choose you department</label>
        <select class="btn btn-dark ms-2 d-block px-5" asp-items="@department" asp-for="dp_Id">
            <option value="@null">---select Department</option>

        </select>
    </div>
    
    <div class="mb-3">
        <label asp-for="Image" class="form-label">Upload your File</label>
        <input class="form-control form-control-sm btn btn-dark" asp-for="Image" type="file">
    </div>

    <input type="submit" value="create" class="btn btn-outline-success" asp-action="create"/>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light"> Back To List</a>
</form>


