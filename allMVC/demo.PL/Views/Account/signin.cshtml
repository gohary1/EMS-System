@model signinViewModel
@{
    ViewData["Title"] = "signin";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<h2>Login</h2>
<form asp-action="signin">
    <div class="input-box">
        <input type="text" placeholder="Enter your Email" required asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="input-box">
        <input type="password" placeholder="Create password" required asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="policy">
        <input type="checkbox" asp-for="RemeberMe">
        <h3>Remeber me</h3>
    </div>
    <div class="input-box button">
        <input type="Submit" value="Register Now">
    </div>
    <div class="text">
        <h3>Don't have an account? <a asp-action="Signup">Sign Up</a></h3>
    </div>
    <div class="text d-flex justify-content-start align-items-center mt-3">
        <h3 class="d-flex justify-content-start "><a asp-action="forgetPass">Forget Password?</a></h3>
    </div>
</form>

